# ===============================================
# V-ACCEL CRM FRONTEND ENVIRONMENT VARIABLES
# ===============================================
# Copy this file to .env.local and update the values

# ===============================================
# API CONFIGURATION
# ===============================================
# Backend API Base URL
VITE_API_BASE_URL=http://localhost:3001/api/v1

# ===============================================
# APPLICATION SETTINGS
# ===============================================
# Application Name
VITE_APP_NAME=V-Accel CRM

# Application Version
VITE_APP_VERSION=1.0.0

# Environment (development/staging/production)
VITE_NODE_ENV=development

# ===============================================
# AUTHENTICATION SETTINGS
# ===============================================
# Token storage keys (optional - defaults provided)
VITE_ACCESS_TOKEN_KEY=access_token
VITE_REFRESH_TOKEN_KEY=refresh_token

# Session timeout in minutes
VITE_SESSION_TIMEOUT=15

# ===============================================
# UI/UX SETTINGS
# ===============================================
# Default theme (light/dark/system)
VITE_DEFAULT_THEME=light

# Default language
VITE_DEFAULT_LANGUAGE=en

# Enable debug mode for development
VITE_DEBUG_MODE=true

# ===============================================
# EXTERNAL SERVICES (Optional)
# ===============================================
# Google Analytics ID
VITE_GA_TRACKING_ID=

# Google Maps API Key (for address features)
VITE_GOOGLE_MAPS_API_KEY=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# ===============================================
# FEATURE FLAGS
# ===============================================
# Enable/disable features during development
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_FILE_UPLOAD=true

# ===============================================
# PERFORMANCE SETTINGS
# ===============================================
# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Max file upload size in MB
VITE_MAX_FILE_SIZE=10

# Pagination default page size
VITE_DEFAULT_PAGE_SIZE=20

# ===============================================
# BRANDING (Optional)
# ===============================================
# Company branding
VITE_COMPANY_NAME=V-Accel
VITE_COMPANY_LOGO=/logo.png
VITE_FAVICON=/favicon.ico

# ===============================================
# DEVELOPMENT SETTINGS
# ===============================================
# Enable React DevTools (development only)
VITE_REACT_DEVTOOLS=true

# Enable Redux DevTools (development only)  
VITE_REDUX_DEVTOOLS=true

# Mock API mode (use mock data instead of real API)
VITE_MOCK_API=false

# ===============================================
# PRODUCTION OVERRIDES
# ===============================================
# Uncomment and modify these for production deployment
# VITE_NODE_ENV=production
# VITE_API_BASE_URL=https://api.yourdomain.com/api/v1
# VITE_DEBUG_MODE=false
# VITE_MOCK_API=false